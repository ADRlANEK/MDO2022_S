from ubuntu

RUN apt-get update
RUN apt-get --yes install git
RUN apt-get --yes install make
RUN apt-get --yes install python3
RUN apt-get --yes install python3.8-venv
RUN apt-get --yes install curl

RUN git clone https://github.com/fintoc-com/fintoc-python.git

WORKDIR "/fintoc-python"

RUN make get-poetry
ENV PATH = "${PATH}:/root/.poetry/bin"

RUN make build-env
