pipeline {
    agent {
        docker {
            image 'node:lts-bullseye-slim'
            args '-p 3000:3000'
        }
    }
    stages {
	stage('Build') {
            steps {
                script {
                    git 'https://github.com/InzynieriaOprogramowaniaAGH/MDO2022_S.git'
		    sh 'git checkout WJ400220'
		    sh 'git pull origin'
                    sh 'cd ITE/GCL03/WJ400220/Lab05/dockerfiles/build.dockerfile ; docker build -t build_node:latest .'
                }
           }
        }
        stage('Test') { 
            steps {
                sh 'cd ITE/GCL03/WJ400220/Lab05/dockerfiles/test.dockerfile ; docker build -t test_node:latest .' 
            }
        }
    }
}

