
  
pipeline 
{
    agent any
    stages
     {

          stage('Clone') 
        {
            steps 
            {
               sh 'docker container prune -f'
               sh 'docker volume prune -f' 
               sh "docker volume create clone"
               sh "docker run --mount source=clone,target=/app --name clone ubuntu"
               sh "rm -rf Guess-Word-Game"
               sh "git clone https://github.com/LondonJim/Guess-Word-Game.git"
               sh "docker cp ./Guess-Word-Game clone:/app"
               sh "docker rm -f clone"            
            }
        }


        stage('Build') 
        {
            steps 
            {
               sh 'docker build -t app_build:latest . -f ./ITE/GCL04/DG304299/Lab05/docker_build'
               sh "docker run --name build --rm --mount source=in,target=/volume_in --mount source=out,target=/volume_out app_build:latest"
            }
        }

         stage('Test') 
        {
            steps 
            {
               
              sh 'docker build -t app_test:latest . -f ./ITE/GCL04/DG304299/Lab05/docker_test'
              sh "docker run --name test --rm --mount source=in,target=/volume_in app_test:latest"
            }
        }

         stage('Deployment') 
        {
            steps 
            {
              sh 'docker images'
              sh 'docker build -t build:latest . -f ./ITE/GCL04/DG304299/Lab05/docker_deploy'
            }
        }
    }
}