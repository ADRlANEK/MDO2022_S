
  
pipeline 
{
    agent any
    stages
     {

          stage('Clone') 
        {
            steps 
            {
               sh 'docker container prune -f'
               sh 'docker volume prune -f' 
               sh 'docker build -t app_clone:latest . -f ./ITE/GCL04/DG304299/Lab05/docker_clone'
               sh "docker run --name clone --rm --mount source=in,target=/volume_in bitnami/git:latest"               
            }
        }


        stage('Build') 
        {
            steps 
            {
               sh 'docker build -t app_build:latest . -f ./ITE/GCL04/DG304299/Lab05/docker_build'
               sh "docker run --name build --rm --mount source=in,target=/volume_in --mount source=out,target=/volume_out app_build:latest"
            }
        }

         stage('Test') 
        {
            steps 
            {
               
              sh 'docker build -t test_build:latest . -f ./ITE/GCL04/DG304299/Lab05/docker_test'
            }
        }

         stage('Deployment') 
        {
            steps 
            {
              sh 'docker images'
              sh 'docker build -t build:latest . -f ./ITE/GCL04/DG304299/Lab05/docker_deploy'
            }
        }
    }
}