pipeline {
    agent any
    
    stages {
        stage('build') {
            steps {
                sh 'docker build -t buildirssi . -f ITE/GCL04/SK403390/Lab05/DockerfileBuild'
		sh 'docker run --name ContainerTemp5 -dit --rm buildirssi'
		sh 'mkdir tempData5'
		sh 'docker cp ContainerTemp5:irssi/build/irssi/src tempData5'
		sh 'docker kill ContainerTemp5'
		sh 'ls'
		sh 'ls tempData5'
		sh 'ls tempData5/src'
            }
        }
        stage('test') {
            steps {
                sh 'docker build -t testirssi . -f ITE/GCL04/SK403390/Lab05/DockerfileTest'
		sh 'docker run testirssi'
            }
        }
    }
}
