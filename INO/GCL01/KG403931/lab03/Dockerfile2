FROM atari:0.01

WORKDIR atari

RUN yum install -y dnf-plugins-core &> /dev/null
RUN dnf install -y fedora-workstation-repositories &> /dev/null
RUN dnf config-manager --set-enabled google-chrome &> /dev/null
RUN dnf install -y google-chrome-stable &> /dev/null
RUN groupadd testers &> /dev/null
RUN useradd -r -g testers tester &> /dev/null
RUN mkdir /home/tester &> /dev/null
RUN chown -R tester:testers /home/tester &> /dev/null
USER tester
RUN npm test; exit 0;
