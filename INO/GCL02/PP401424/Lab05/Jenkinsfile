pipeline {
    agent any
    
    parameters {
        string(name: 'ProgramName')
        string(name: 'Version')
    }
    
    stages {
        stage('Build') {
            steps {
                echo 'BUILD'
                dir('INO/GCL02/PP401424/Lab05') {
                    sh 'docker build . -f dock1.dockerfile -t builder'
                }
            }
        }
        
        stage('Tests') {
            steps {
                echo 'TESTS'
                dir('INO/GCL02/PP401424/Lab05') {
                    sh 'docker build . -f dock2.dockerfile -t tester'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'DEPLOY'
                sh 'docker run --volume /var/jenkins_home/workspace/rurka1/INO/GCL02/PP401424/Lab05:/finalBuild builder mv -n build /finalBuild'
                dir('INO/GCL02/PP401424/Lab05') {
                    sh 'docker build . -f dock3.dockerfile -t deploy'
                }
                sh 'docker run --volume /var/jenkins_home/workspace/rurka1/INO/GCL02/PP401424/Lab05/build:/build -d -p 3000:80 deploy'
                sh 'docker stop $(docker ps -a -q)'
            }
        }
        
        stage('Publish') {
            steps {
                echo 'PUBLISH'
                dir('INO/GCL02/PP401424/Lab05') {
                    sh 'docker build . -f dock4.dockerfile -t publisher'
                }
                sh "docker run --volume /var/jenkins_home/workspace/rurka1/INO/GCL02/PP401424/Lab05:/finalArchive publisher mv archive.tar.xz /finalArchive"
            }
        }
    }
}
